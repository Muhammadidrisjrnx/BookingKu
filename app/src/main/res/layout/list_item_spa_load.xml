<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/grey"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
            android:id="@+id/cardku"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="15dp"
            app:cardElevation="1dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/imageview_item_spa"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="@color/grey"
                        android:src="@color/placeholder_bg"
                        android:scaleType="fitXY"/>
            </RelativeLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/textview_name_item"
                        style="@android:style/TextAppearance.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_medium"
                        android:maxLines="3"
                        android:text="qwertyuiopasdfghjklzxcvbnm1223iu3ijdkjsjksj"
                        android:textColor="@color/placeholder_bg"
                        android:background="@color/placeholder_bg"/>

                <TextView
                        android:id="@+id/textview_description_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_light"
                        android:maxLines="3"
                        android:text="A powerful ingredient for overall wellness, massage therapies decrease anxiety, enhance quality of sleep and improve energy and healing."
                        android:textColor="@color/placeholder_bg"
                        android:background="@color/placeholder_bg"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"/>

                <TextView
                        android:id="@+id/textview_cost_item"
                        style="@android:style/TextAppearance.Small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:text="Harga"
                        android:textColor="@color/placeholder_bg"
                        android:background="@color/placeholder_bg"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/roboto_light"
                        android:layout_marginBottom="15dp"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>